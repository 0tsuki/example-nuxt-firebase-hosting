{
  "functions": {
    "predeploy": [
      "npm run build",
      "mv dist \"$RESOURCE_DIR\"",
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "postdeploy": "rm -rf \"$RESOURCE_DIR\"/dist"
  },
  "hosting": {
    "public": "empty",
    "predeploy": "mkdir empty",
    "postdeploy": "rm -rf empty",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "onRequestBasicAuth"
      }
    ]
  }
}
